    },
    "header": {
      "height": "60px",
      "backgroundColor": "#2C3E50",
      "textColor": "#FFFFFF"
    },
    "calendar": {
      "headerBackgroundColor": "#F8F9FA",
      "todayHighlight": "#3498DB",
      "selectedBackgroundColor": "#3498DB",
      "selectedTextColor": "#FFFFFF",
      "weekendTextColor": "#7F8C8D"
    },
    "timeBlock": {
      "blue": {
        "backgroundColor": "#3498DB",
        "textColor": "#FFFFFF",
