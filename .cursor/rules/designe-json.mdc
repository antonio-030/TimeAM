      },
      "orange": {
        "backgroundColor": "#F39C12",
        "textColor": "#FFFFFF",
        "label": "Schicht"
      },
      "green": {
        "backgroundColor": "#27AE60",
        "textColor": "#FFFFFF",
        "label": "Schicht"
      },
      "purple": {
        "backgroundColor": "#9B59B6",
        "textColor": "#FFFFFF",
        "label": "Krank"
      },
      "red": {
        "backgroundColor": "#E74C3C",
        "textColor": "#FFFFFF",
        "label": "Urlaub"
      },
      "borderRadius": "4px",
      "padding": "8px 12px",
      "fontSize": "12px",
      "fontWeight": 600
    },
    "button": {
      "primary": {
        "backgroundColor": "#3498DB",
        "textColor": "#FFFFFF",
        "hoverBackgroundColor": "#2980B9"
      },
      "success": {
        "backgroundColor": "#27AE60",
        "textColor": "#FFFFFF",
        "hoverBackgroundColor": "#229954"
      },
      "danger": {
        "backgroundColor": "#E74C3C",
        "textColor": "#FFFFFF",
        "hoverBackgroundColor": "#C0392B"
      },
      "icon": {
        "backgroundColor": "#3498DB",
        "textColor": "#FFFFFF",
        "size": "32px",
        "borderRadius": "4px"
      },
      "borderRadius": "4px",
      "padding": "8px 16px",
      "fontSize": "14px"
    },
    "table": {
      "headerBackgroundColor": "#2C3E50",
      "headerTextColor": "#FFFFFF",
      "rowHoverBackgroundColor": "#F8F9FA",
      "borderColor": "#ECF0F1",
      "cellPadding": "12px"
    },
    "badge": {
      "info": {
        "backgroundColor": "#3498DB",
        "textColor": "#FFFFFF"
      },
      "success": {
        "backgroundColor": "#27AE60",
        "textColor": "#FFFFFF"
      },
      "warning": {
        "backgroundColor": "#F39C12",
        "textColor": "#FFFFFF"
      },
      "danger": {
        "backgroundColor": "#E74C3C",
        "textColor": "#FFFFFF"
      },
      "borderRadius": "12px",
      "padding": "2px 8px",
      "fontSize": "11px",
      "fontWeight": 600
    },
    "input": {
      "borderColor": "#BDC3C7",
      "focusBorderColor": "#3498DB",
      "backgroundColor": "#FFFFFF",
      "textColor": "#2C3E50",
      "placeholderColor": "#95A5A6",
      "borderRadius": "4px",
      "padding": "8px 12px"
    }
  },
  "layout": {
    "sidebarWidth": "200px",
    "headerHeight": "60px",
    "contentPadding": "24px",
    "maxContentWidth": "1400px"
  },
  "interactions": {
    "transitionDuration": "200ms",
    "transitionTimingFunction": "ease-in-out",
    "hoverScale": 1.02,
    "activeScale": 0.98
  }
